<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
	<LinearLayout
			android:orientation="vertical"
			android:background="@mipmap/ic_launcher"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true">
		<include layout="@layout/actionbar_xml"></include>

		<ImageView
				android:src="@mipmap/login_l"
				android:layout_width="64dp"
				android:layout_marginLeft="156dp"
				android:layout_marginTop="154dp"
				android:layout_height="24dp"/>

		<EditText
				android:id="@+id/login_username"
				android:hint="Email"
				android:gravity="center_vertical"
				android:textColor="#ffffff"
				android:layout_marginTop="26dp"
				android:layout_width="match_parent"
				android:layout_marginLeft="48dp"
				android:layout_marginRight="48dp"
				android:paddingLeft="4dp"
				android:layout_gravity="center_horizontal"
				android:background="@drawable/login_shape"
				android:layout_height="48dp"/>
		<EditText
				android:id="@+id/login_password"
				android:gravity="center_vertical"
				android:hint="Password"
				android:textColor="#ffffff"
				android:layout_marginTop="16dp"
				android:layout_marginLeft="48dp"
				android:layout_marginRight="48dp"
				android:layout_width="match_parent"
				android:paddingLeft="4dp"
				android:layout_gravity="center_horizontal"
				android:background="@drawable/login_shape"
				android:layout_height="48dp"/>

		<ImageView
				android:id="@+id/login_fp"
				android:layout_marginLeft="152dp"
				android:layout_marginTop="28dp"
				android:src="@mipmap/login_fp"
				android:layout_width="72dp"
				android:layout_height="11dp"/>

		<LinearLayout
				android:layout_marginTop="22dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="56dp">
			<ImageView
					android:id="@+id/login_f"
					android:src="@mipmap/login_f"
					android:layout_marginLeft="121dp"
					android:layout_width="56dp"
					android:layout_height="56dp"/>
			<ImageView
					android:id="@+id/login_g"
					android:src="@mipmap/login_g"
					android:layout_marginLeft="22dp"
					android:layout_width="56dp"
					android:layout_height="56dp"/>

		</LinearLayout>

	</LinearLayout>
	<ImageView
			android:id="@+id/login_continue"
			android:layout_marginBottom="53dp"
			android:layout_alignParentBottom="true"
			android:src="@mipmap/login_c_true"
			android:layout_marginLeft="24dp"
			android:layout_marginRight="24dp"
			android:layout_width="match_parent"
			android:layout_height="48dp"
	/>
</RelativeLayout>